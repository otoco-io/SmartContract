    "solidity-docgen": "^0.6.0-beta.10",
    "tarantula-fl": "^1.0.0",
    "web3-utils": "^1.7.3"
  },
  "scripts": {
    "test": "mocha",
    "coverage": "npx hardhat coverage && npx hardhat coverage --matrix",
